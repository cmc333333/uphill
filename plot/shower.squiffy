[[Shower]]:
@clear

<div class="shower-controls">
  <span class="hot">[Hot](Start Shower)</span>
  <span class="cold">[Cold](Start Shower)</span>
</div>

[Start Shower]:
    squiffy.utils.delayed(1000, "Shower Image");

[Shower Image]:
    $('div.background').css("background-image", "url(/img/shower.gif)");
    squiffy.utils.delayed(5000, "Done");

[Done]:
    $('div.background').css("background-image", "none");
ALL DONE!
